{
    "id": "",
    "type": "widget",
    "name": "Simple Weather",
    "author": "PixelBoard Team",
    "version": "1.0.0",
    "description": "A simple weather widget, user can set a city name to show the local weather",
    "size": [128,160],
    "fields": [
        {
            "id": "city", 
            "name": "City",
            "type": "text",
            "desc": "The city name for the clock, e.g., New york",
            "default": ""
        },
        {
            "id": "temperature_unit", 
            "name": "Temperature Unit",
            "type": "dropdown",
            "desc": "Temperature unit to use",
            "options": [
                {
                    "display": "Celsius",
                    "value": "celsius"
                },
                {
                    "display": "Fahrenheit",
                    "value": "fahrenheit"
                }
            ],
            "default": "celsius"
        },
        {
            "id": "forecast", 
            "name": "Forecast Days",
            "type": "dropdown",
            "desc": "Number of days to show in the forecast",
            "options": [
                {
                    "display": "Only show current weather",
                    "value": "0"
                },
                {
                    "display": "3 days forecast",
                    "value": "3"
                },
                {
                    "display": "5 days forecast",
                    "value": "5"
                }
            ],
            "default": "0"
        }
    ],
    "preview": []
}